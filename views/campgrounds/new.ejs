<% include ../partials/header %>
<div class="container">
  <div class="row">
      <div class="col-lg-6 col-lg-offset-3  col-md-6 col-md-offset-3  col-sm-6 col-sm-offset-3  col-xs-12">
        <h1>Create a new campground</h1>
        <form action="/campgrounds" method="POST">
          <input class="form-control form-group" type="text" name="name" placeholder="Name">
          <input class="form-control form-group" type="text" name="image" placeholder="Image Url">
          <textarea class="form-control" rows="5" name="description" placeholder="Description"></textarea>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a class="btn btn-link" href="/campgrounds">Go back</a>
      </div>
    </div>
</div>
<% include ../partials/footer %>