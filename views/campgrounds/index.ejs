<% include ../partials/header %>
<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1> Welcome to YelpCamp</h1>
      <p>View the best campgrounds all over the world</p>
      <div>
      <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
    </div>
  </div>
</div>
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% for(var i = 0; i < campgrounds.length; i++){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campgrounds[i].image %>">
          <div class="caption">
            <h4><%= campgrounds[i].name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>
