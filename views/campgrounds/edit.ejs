<% include ../partials/header %>
<div class="container">
  <div class="row">
      <div class="col-lg-6 col-lg-offset-3  col-md-6 col-md-offset-3  col-sm-6 col-sm-offset-3  col-xs-12">
        <h1>Edit <%= campground.name %></h1>
        <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
          <input class="form-control form-group" type="text" name="campground[name]" value="<%= campground.name %>">
          <input class="form-control form-group" type="text" name="campground[image]" value="<%= campground.image %>">
           <input class="form-control form-group" type="text" name="campground[description]" value="<%= campground.description %>">
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a class="btn btn-link" href="/campgrounds">Go back</a>
      </div>
    </div>
</div>
<% include ../partials/footer %>